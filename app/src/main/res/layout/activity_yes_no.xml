<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kmorozov001.javatesting.yesNo">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст вопроса"
            android:id="@+id/question"
            android:textSize="16dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp" />
    </ScrollView>

    <Button
        android:layout_height="wrap_content"
        android:text="Да"
        android:id="@+id/yes"
        android:textSize="14dp"
        android:background="#e7e7e7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:layout_width="200dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="   JavaTesting"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@color/accent_material_light"
        android:textColor="#ffffff"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText3"
        android:background="#007380"
        android:padding="10dp"
        android:layout_above="@+id/scroll"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:textAlignment="center" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:gravity="left|center_vertical|center"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_toStartOf="@+id/editText4"
        android:background="#005daf"
        android:padding="10dp"
        android:layout_above="@+id/scroll"
        android:textAlignment="center" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:gravity="left|center_vertical|center"
        android:background="#9b0000"
        android:padding="10dp"
        android:layout_above="@+id/scroll"
        android:textAlignment="center" />

    <Button
        android:layout_height="wrap_content"
        android:text="Нет"
        android:id="@+id/no"
        android:textSize="14dp"
        android:background="#e7e7e7"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="200dp" />

</RelativeLayout>
